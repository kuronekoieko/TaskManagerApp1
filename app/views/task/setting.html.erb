<h2>設定画面です</h2>

<%= link_to("タスク一覧へ","/task/index") %><br><br>

<%= link_to("ステータス設定","/task/setting/status") %><br>
<%= link_to("優先度設定","/task/setting/priority") %><br>
<%= link_to("担当者設定","/task/setting/pic") %><br>
<%= link_to("分類設定","/task/setting/classification") %><br>

<%= form_tag("/task/create_record/#{@table_name}") do%>
<br>
<%=@name%>を追加
<br>
<input type="text" name="record_name">
<input type="submit" value="作成">
<% end %>

<br>
<%= form_tag("/task/delete_record/#{@table_name}") do %>
<table>
    <tr>
        <td>選択</td>
        <td>ID</td>
        <td><%=@name%>名</td>
        <% @records.each do |record|%>
    <tr>
        <td><%= check_box "deletelist", record.id %></td>
        <td><%= record.id %></td>
        <td><%= record.name %></td>
    </tr>
    <%end%>
</table>
<input type="submit" value="削除">
<% end %>