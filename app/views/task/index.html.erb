<h2>タスク一覧画面です</h2>

<%= form_tag("/task/create") do%>
<p>新規タスク名</p>
<input type="text" name="task_name">
<input type="submit" value="作成">
<% end %>

<%= form_tag("/task/delete") do %>
<table>
    <tr>
        <td>選択</td>
        <td>ID</td>
        <td>タスク名</td>
        <td>担当者</td>
        <td>ステータス</td>
        <td>優先度</td>
        <td>分類</td>
        <td>作成日</td>
        <td>更新日</td>
        <% @tasks.each do |task|%>
    <tr>
        <td><%= check_box "deletelist", task.id %></td>
        <td><%= task.id %></td>
        <td> <%= link_to(task.name,"/show/show/#{task.id}") %><br></td>
        <td><%= Pic.find_by(id: task.pic_id).name %></td>
        <td><%= Status.find_by(id: task.status_id).name %></td>
        <td><%= Priority.find_by(id: task.priority_id).name %></td>
        <td><%= Classification.find_by(id: task.classification_id).name %></td>
        <td><%=task.created_at%></td>
        <td><%=task.updated_at%></td>
    </tr>
    <%end%>
</table>
<input type="submit" value="削除">
<% end %>