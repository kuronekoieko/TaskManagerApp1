<h2>タスク一覧画面です</h2>

<%= form_tag("/task/create") do%>
<p>新規タスク名</p>
<input type="text" name="task_name">
<input type="submit" value="作成">
<% end %>

<%= link_to("全削除","/task/reset",method:"post")%>

<%= form_tag("/task/delete") do %>
<table>
    <tr>
        <td>選択</td>
        <td>ID</td>
        <td>タスク名</td>
        <td>担当者</td>
        <td>ステータス</td>
        <td>優先度</td>
        <td>分類</td>
        <td>作成日</td>
        <td>更新日</td>
        <td>適用</td>
        <% @tasks.each do |task|%>
    <tr>
        <%= form_tag("/task/change/#{task.id}") do %>
        <td><%= check_box "deletelist", task.id %></td>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td>
            <%= select_tag "pic_id", options_for_select(@pics_hush,:selected=>6) %>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td><%=task.created_at%></td>
        <td><%=task.updated_at%></td>
        <td><input type="submit" value="変更"></td>
        <%end%>
    </tr>
    <%end%>
</table>
<input type="submit" value="削除">
<% end %>